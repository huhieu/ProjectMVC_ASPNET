@model ProjectMVC_Ecommerce.Models.TinDang

@{
    ViewData["Title"] = "Details" + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminTinDangs" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Chi tiết sản phẩm : @Model.Title</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-md-center justify-content-between">
        <div class="media m-b-15 align-items-center">
            <div class="avatar avatar-image rounded" style="height : 70px;width: 70px">
                <img src="~/images/news/@Model.Thumb" alt="@Model.Thumb">
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.Title</h4>
                <p class="text-muted m-b-0">ID: #@Model.PostId</p>
            </div>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminTinDangs" asp-action="Edit" asp-route-id="@Model.PostId">
                <span>Edit</span>
            </a>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-edit-option">Image Info</a>
        </li>
    </ul>
</div>

<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Chi tiết sản phẩm : @Model.Title</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Name:</td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Alias:</td>
                                    <td>@Model.Alias</td>
                                </tr>

                                <tr>
                                    <td>Stastus:</td>
                                    <td>
                                        <div class="checkbox">
                                            <input id="checkbox2" type="checkbox" @(Model.Published ? "checked" : "") disabled>
                                            <label for="checkbox2">Published</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="checkbox2" type="checkbox" @(Model.IsHot ? "checked" : "") disabled>
                                            <label for="checkbox2">IsHot</label>
                                        </div><div class="checkbox">
                                            <input id="checkbox2" type="checkbox" @(Model.IsNewfeed ? "checked" : "") disabled>
                                            <label for="checkbox2">IsNewfeed</label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thông tin mô tả</h4>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Contents)
                </div>
            </div>
            </div>
            
            <div class="tab-pane fade" id="product-edit-option">
                <div class="card">
                    <div class="card-body">
                       <div class="row">
                           <div class="col-md-12">
                               <img  class="img-fluid" src="~/images/news/@Model.Thumb" alt="@Model.Title"/>
                           </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
      
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>