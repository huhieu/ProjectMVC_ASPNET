@model IEnumerable<ProjectMVC_Ecommerce.Models.Role>

@{
    ViewData["Title"] = "Quản lí quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-tone m-r-5">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model!=null)
            {
                foreach( var item in Model)
                {
                    <tr>
                        <th scope="row">@item.RoleId</th>
                        <td>@item.RoleName</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-primary btn-tone m-r-5" >View</a>
                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-secondary btn-tone m-r-5" >Edit</a>
                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-success btn-tone m-r-5" >Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

