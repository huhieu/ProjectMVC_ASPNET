@model ProjectMVC_Ecommerce.Models.Product

@{
    ViewData["Title"] = "Details" + Model.ProductName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Chi tiết sản phẩm : @Model.ProductName</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Chi tiết sản phẩm : @Model.ProductName</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Short Description:</td>
                        <td>@Model.ShortDesc</td>
                    </tr>
                    <tr>
                        <td>Price:</td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>Active:</td>
                        <td>
                            <div class="checkbox">
                                <input id="checkbox2" type="checkbox" @(Model.Active ? "checked" : "") disabled>
                                <label for="checkbox2">Active</label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>BestSellers:</td>
                        <td>
                            <div class="checkbox">
                                <input id="checkbox1" type="checkbox" @(Model.BestSellers ? "checked" : "") disabled>
                                <label for="checkbox1">BestSellers</label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>HomeFlag:</td>
                        <td>
                            <div class="checkbox">
                                <input id="checkbox2" type="checkbox" @(Model.HomeFlag ? "checked" : "") disabled>
                                <label for="checkbox2">HomeFlag</label>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Discount:</td>
                        <td>@Model.Discount</td>
                    </tr>
                    <tr>
                        <td>Category:</td>
                        <td>@Model.Cat.CatName</td>
                    </tr>
                    <tr>
                        <td>DateCreated:</td>
                        <td>@Model.DateCreated</td>
                    </tr>
                    <tr>
                        <td>DateModified:</td>
                        <td>@Model.DateModified</td>
                    </tr>
                    <tr>
                        <td>Title:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>MetaKey:</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>Tags:</td>
                        <td>@Model.Tags</td>
                    </tr>
                    <tr>
                        <td>Thumbnails:</td>
                        <td><img width="200" height="200" src="~/images/products/@Model.Thumb" /></td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>
                            @Html.Raw(Model.Description)
                        </td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa:</td>
                        <td>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


