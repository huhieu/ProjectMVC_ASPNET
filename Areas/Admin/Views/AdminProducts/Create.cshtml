@model ProjectMVC_Ecommerce.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
            </div>
            <div class="m-b-15">
                <button class="btn btn-primary" id="testButton">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Product Name</label>
                        <input type="text" class="form-control" asp-for="ProductName">
                    </div><div class="form-group">
                        <label class="font-weight-semibold" for="productName">Short desc</label>
                        <input type="text" class="form-control" asp-for="ShortDesc">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Price</label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Price Discount</label>
                            <input type="text" class="form-control" asp-for="Discount">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productName">UnitsInStock</label>
                            <input type="text" class="form-control" asp-for="UnitsInStock">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Category</label>
                            <select class="custom-select" asp-for="CatId" style="min-width: 180px;" asp-items="ViewBag.CatId">
                                <option selected disabled>Select Category</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="productBrand">Thumnail</label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <input type="checkbox" asp-for="Active">
                            <label for="Active">Public</label>
                        </div>
                        <div class="checkbox">
                            <input type="checkbox" asp-for="HomeFlag">
                            <label for="HomeFlag">HomeFlag</label>
                        </div>
                        <div class="checkbox">
                            <input type="checkbox" asp-for="BestSellers">
                            <label for="BestSellers">BestSellers</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Title</label>
                        <input type="text" class="form-control" asp-for="Title" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productColors">MetaDesc</label>
                        <input type="text" class="form-control" asp-for="MetaDesc" />

                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">MetaKey</label>
                        <input type="text" class="form-control" asp-for="MetaKey" />

                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">Tags</label>
                        <input type="text" class="form-control" asp-for="Tags" />

                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <div id="productDescription">
                        <div id="editor-container"></div>
                    </div>
                    <input type="hidden" asp-for="Description" id="Description" />
                </div>
            </div>
        </div>


    </div>
</form>


@section Scripts {
    <!-- page js -->
    <script src="~/AdminAssets/vendors/select2/select2.min.js"></script>
    <script src="~/AdminAssets/vendors/quill/quill.min.js"></script>
    <script src="~/AdminAssets/js/pages/e-commerce-product-edit.js"></script>
    <script>
        // e-commerce-product-edit.js

        // Initialize Quill
        var quill = new Quill('#editor-container', {
            theme: 'snow' // or 'bubble' for more compact toolbar
        });

        // Update the hidden input field when the form is submitted
        $('form').on('submit', function () {
            var description = document.querySelector('.ql-editor').innerHTML;
            $('#Description').val(description);
        });

    </script>
}
    

