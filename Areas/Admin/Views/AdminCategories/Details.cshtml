@model ProjectMVC_Ecommerce.Models.Category

@{
    ViewData["Title"] = "Details" + Model.CatName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminCategories" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Chi tiết sản phẩm : @Model.CatName</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Chi tiết sản phẩm : @Model.CatName</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.CatId</td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td>@Model.CatName</td>
                    </tr>
                    <tr>
                        <td>Contents:</td>
                        <td>
                            @Html.Raw(Model.Description)
                        </td>
                    </tr>
                    <tr>
                        <td>Thumbnails:</td>
                        <td><img width="200" height="200" src="~/images/categories/@Model.Thumb" /></td>
                    </tr>
                    <tr>
                        <td>Published:</td>
                        <td>
                            <div class="checkbox">
                                <input id="checkbox2" type="checkbox" @(Model.Published ? "checked" : "") disabled>
                                <label for="checkbox2">Published</label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Title:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>MetaKey:</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>Alias:</td>
                        <td>@Model.Alias</td>
                    </tr>
                    <tr>
                        <td>Ordering:</td>
                        <td>@Model.Ordering</td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

